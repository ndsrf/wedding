# Docker Environment Configuration
# Copy this file to .env and fill in the values before running docker-compose

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=wedding
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=wedding_db

# ============================================
# NextAuth Configuration
# ============================================
# IMPORTANT: Set this to your actual domain in production
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-generate-with-openssl-rand-base64-32
# Required when running in containers or behind reverse proxies
AUTH_TRUST_HOST=true

# ============================================
# Application URLs
# ============================================
# The public URL where your app is accessible
APP_URL=https://your-domain.com

# ============================================
# OAuth Providers
# ============================================
# Google OAuth (https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth (https://developers.facebook.com/)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Apple OAuth (https://developer.apple.com/)
APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret

# ============================================
# Email Service (Resend)
# ============================================
RESEND_API_KEY=your-resend-api-key
EMAIL_FROM=noreply@your-domain.com
EMAIL_FROM_NAME=Wedding Management Platform

# ============================================
# SMS and WhatsApp Service (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
TWILIO_WEBHOOK_ENABLED=true

# ============================================
# Optional: Redis for Caching
# ============================================
# Uncomment if using Redis
# REDIS_URL=redis://redis:6379

# ============================================
# Logging
# ============================================
LOG_LEVEL=info

# ============================================
# Monitoring (Optional)
# ============================================
UPTIME_ROBOT_WEBHOOK=your-uptime-robot-webhook-url

# ============================================
# Backup Configuration (Optional)
# ============================================
BACKUP_STORAGE_URL=your-backup-storage-url
BACKUP_RETENTION_DAYS=30
